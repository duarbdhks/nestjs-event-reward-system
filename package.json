{
  "name": "nestjs-event-reward-system",
  "version": "1.0.0",
  "description": "Event/Reward Management Platform with NestJS MSA",
  "private": true,
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "build": "nest build",
    "build:auth": "nest build auth --config apps/auth/nest-cli.json",
    "build:gateway": "nest build gateway --config apps/gateway/nest-cli.json",
    "build:event": "nest build event --config apps/event/nest-cli.json",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/*/*.ts\"",
    "start:dev:gateway": "nest start --watch -c apps/gateway/nest-cli.json",
    "start:dev:auth": "nest start --watch -c apps/auth/nest-cli.json",
    "start:dev:event": "nest start --watch -c apps/event/nest-cli.json",
    "start:dev": "concurrently \"npm run start:dev:gateway\" \"npm run start:dev:auth\" \"npm run start:dev:event\"",
    "start:prod:gateway": "node dist/apps/gateway/main",
    "start:prod:auth": "node dist/apps/auth/main",
    "start:prod:event": "node dist/apps/event/main",
    "start:prod": "concurrently \"npm run start:prod:gateway\" \"npm run start:prod:auth\" \"npm run start:prod:event\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "test": "jest --config jest.config.json",
    "test:watch": "jest --config jest.config.json --watch",
    "test:cov": "jest --config jest.config.json --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --config jest.config.json --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "deploy": "docker-compose -f docker-compose.yml -p nestjs-event-reward-system up --build -d"
  },
  "dependencies": {
    "@nestjs/axios": "^4.0.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.0.0",
    "@nestjs/mongoose": "^10.0.0",
    "@nestjs/passport": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.1.17",
    "bcrypt": "^5.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "concurrently": "^8.2.2",
    "mongoose": "^7.0.0",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/passport-jwt": "^3.0.8",
    "@types/passport-local": "^1.0.38",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^4.9.5"
  },
  "engines": {
    "node": "=18.0.0"
  }
}
